<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="it.objectway.corsi.ecommerce.models.Product" table="product">
        <id name="id" type="int">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="name" type="string">
            <column name="name" not-null="true" unique="true" />
        </property>
        <property name="description" type="text">
            <column name="description" not-null="false" />
        </property>
        <property name="price" type="big_decimal">
            <column name="price" not-null="true" precision="19" scale="2" />
        </property>
        <property name="storage" type="long">
            <column name="storage" not-null="true" />
        </property>
        <property name="visible" type="boolean">
            <column name="visible" not-null="true" />
        </property>
        <!--<set name="orders" cascade="all">
            <key column="product"/>
            <one-to-many class="it.objectway.corsi.ecommerce.models.OrderRow"/>
        </set>-->
    </class>

    <!--<class name="it.objectway.corsi.ecommerce.models.OrderRow" table="order_row">
        <id name="product" type="int">
            <column name="product"/>
            <generator class="foreign"/>
        </id>
        <property name="amount" type="int">
            <column name="amount"/>
        </property>
    </class>-->
</hibernate-mapping>