<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="basketServlet" class="it.objectway.corsi.ecommerce.servlet.BasketServlet">
        <property name="productDao" ref="productDao"/>
    </bean>
    <bean id="productDao" class="it.objectway.corsi.ecommerce.impl.JdbcProductSpringDao">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="dataSource" destroy-method="close" class="org.apache.commons.dbcp2.BasicDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/ecommerce"/>
        <property name="username" value="ecommerce"/>
        <property name="password" value="ecommerce"/>
    </bean>
    <import resource="spring-aop.xml"/>
</beans>